<MyButton@Button>:
    font_size: 32

<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 6
    padding: 15
    spacing: 15

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False

    BoxLayout:
        spacing: 10
        MyButton:
            background_color: 0,0,0,0
            canvas.before:
                Color:
                    rgba: (.4,.4,.4,1) if self.state=='normal' else (0,.7,.7,1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [30,]
            text: "AC"
            on_press: entry.text = ""
        MyButton:
            text: "<--"
            on_press: calculator.clear_value(entry.text)
        MyButton:
            text: "%"
            on_press: calculator.percent(entry.text)
        MyButton:
            text: "/"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        MyButton:
            text: "7"
            on_press: entry.text += self.text
        MyButton:
            text: "8"
            on_press: entry.text += self.text
        MyButton:
            text: "9"
            on_press: entry.text += self.text
        MyButton:
            text: "-"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        MyButton:
            text: "4"
            on_press: entry.text += self.text
        MyButton:
            text: "5"
            on_press: entry.text += self.text
        MyButton:
            text: "6"
            on_press: entry.text += self.text
        MyButton:
            text: "*"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        MyButton:
            text: "1"
            on_press: entry.text += self.text
        MyButton:
            text: "2"
            on_press: entry.text += self.text
        MyButton:
            text: "3"
            on_press: entry.text += self.text
        MyButton:
            text: "+"
            on_press: entry.text += self.text
    BoxLayout:
        spacing: 10
        MyButton:
            background_color: 0,0,0,0
            canvas.before:
                Color:
                    rgba: (.4,.4,.4,1) if self.state=='normal' else (0,.7,.7,1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [30,]
            text: "0"
            on_press: entry.text += self.text
        MyButton:
            text: "."
            on_press: entry.text += self.text
        MyButton:
            text: "="
            on_press: calculator.equal(entry.text)
